    buttonParams.resetAll.label = 'Reset All'
    self.editButton(buttonParams.resetAll)
    self.editButton(buttonParams.hiddenConfirmResetAllYes)
    self.editButton(buttonParams.hiddenConfirmResetAllNo)
end

