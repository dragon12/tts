function confirmResetAll()
    -- remove all buttons
    local buttons = self.getButtons()

    for k,v in pairs(buttons) do
        self.removeButton(v.index)
    end

    local displayBoard = getObjectFromGUID(displayBoardGuid)
    displayBoard.call("ext_initFromClean")

    initFromClean()
end

